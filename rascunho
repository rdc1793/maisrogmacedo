<script>
  const iframe = document.getElementById('iframeContainer');
  const loading = document.getElementById('loadingOverlay');
  const targetURL = "https://maisrogmacedo.wordpress.com/inicio/";

  function loadIframe() {
    // Mostra loading e esconde iframe
    loading.style.display = 'flex';
    iframe.style.display = 'none';

    // Força ignorar cache adicionando timestamp
    iframe.src = targetURL + "?t=" + new Date().getTime();

    iframe.onload = () => {
      // Mostra iframe e esconde loading
      loading.style.display = 'none';
      iframe.style.display = 'block';
    };

    iframe.onerror = () => {
      console.error("Erro ao carregar a página, tentando novamente...");
      setTimeout(loadIframe, 3000); // tenta recarregar após 3s
    };
  }

  loadIframe();
</script>


